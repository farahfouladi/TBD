#main
    %h1 Drive App Account Setup
=form_for @user, url: { action: "update" } do |f|
    =f.label :name
    =f.text_field :name

    </br>
    =f.label :email
    =f.email_field :email
    
    </br>
    =f.label :birthday
    =f.date_field :birthday

    </br>
    =f.label :is_driver
    =f.select(:is_driver, [['Drive and Ride', 1], ['Just Ride', 2]])
    </br>
    =f.submit "Update user"
