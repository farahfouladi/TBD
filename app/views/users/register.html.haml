#main
%h3 Create a new user

=form_for @empty_user, url: { action: "create" }  do |f| 
	=f.label :name
	=f.text_field :name

	</br>
	=f.label :email
	=f.email_field :email
	</br>
	=f.label :birthday
	=f.date_field :birthday

	</br>
	=f.label :driver
	=f.select(:driver, [['Drive and Ride', 1], ['Just Ride', 2]])
	</br>
	=f.submit "Create user"

= link_to "Please sign up using Google", user_omniauth_authorize_path(:google_oauth2)
